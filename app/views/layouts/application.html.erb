<!DOCTYPE html>
<html>
  <head>
    <title>UzGRYD</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Raleway&display=swap' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag 'UzGRYD.ico' %>
  </head>

  <body>

    <div id="sidebar">
      <ul>
        <li class="category"><%= link_to "UzGRYD", root_path %></li>
        <li class="category"><%= link_to "Posts", root_path %></li>
        <li class="category">Login</li>
        <li class="category">About</li>
      </ul>
    </div>

    <div id="main_content">
      <div id="header">
        <p>Post Feed</p>
        <div class="buttons">
          <button class="button"><%= link_to "Make Post", new_post_path %></button>
          <button class="button">Log Out</button>
        </div>
      </div>
      
      <% flash.each do |name, msg| %>
        <%= content_tag(:div, msg, class: "alert")%>
      <% end %>  

      <%= yield %>

    </div>
  </body>
</html>
